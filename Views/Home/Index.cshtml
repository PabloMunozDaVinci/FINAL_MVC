@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Home Page";
}

<!-- Section: Design Block -->
<section class="">
  <!-- Jumbotron -->
  <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-5 display-3 fw-bold ls-tight">
            Red Social <br />
            <span class="text-primary">for your business</span>
          </h1>
          <p style="color: hsl(217, 10%, 50.8%)">
            Lorem ipsum dolor sit amet consectetur adipisicing elit.
            Eveniet, itaque accusantium odio, soluta, corrupti aliquam
            quibusdam tempora at cupiditate quis eum maiores libero
            veritatis? Dicta facilis sint aliquid ipsum atque?
          </p>
        </div>

        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card">
            <div class="card-body py-5 px-md-5">
              <form>
                <!-- 2 column grid layout with text inputs for the first and last names -->
               

                <!-- Email input -->
                <div class="form-outline mb-4">
                  <input type="email" id="form3Example3" class="form-control" />
                  <label class="form-label" for="form3Example3">Email address</label>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                  <input type="password" id="form3Example4" class="form-control" />
                  <label class="form-label" for="form3Example4">Password</label>
                </div>

               
                <!-- Submit button -->
                 <div class="text-center">
                <button type="submit" class="btn btn-primary btn-block mb-4" > 
                  Sign up
                </button>
                </div>

                <!-- Register button -->
                <div class="text-center">
                    <a class="btn btn-block btn-outline-info mr-1" type="button" asp-area="" asp-controller="Registro" asp-action="Index">Registrarse</a>
                </div>

                <!-- Test inicio button -->
                <div class="text-center">
                    <a class="btn btn-block btn-outline-info mr-1" type="button" asp-area="" asp-controller="Posts" asp-action="InicioUsuario">RedSocial</a>
                </div>

            
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->