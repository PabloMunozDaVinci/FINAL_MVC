@using Microsoft.AspNetCore.Http
@model FINAL_MVC.Models.Usuario

@{
    ViewData["Title"] = "Home Page";
}

<!-- Section: Design Block -->
<section class="">
  <!-- Jumbotron -->
  <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-5 display-3 fw-bold ls-tight">
            Red Social <br />
            <span class="text-primary">for your business</span>
          </h1>
          <p style="color: hsl(217, 10%, 50.8%)">
            Lorem ipsum dolor sit amet consectetur adipisicing elit.
            Eveniet, itaque accusantium odio, soluta, corrupti aliquam
            quibusdam tempora at cupiditate quis eum maiores libero
            veritatis? Dicta facilis sint aliquid ipsum atque?
          </p>
        </div>

        <div class="col-lg-5 mb-5 mb-lg-0">
          <div class="card">
            <div class="card-body py-4 px-md-4">
                 
                <!--Login -->
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Mail" class="control-label"></label>
                                <input asp-for="Mail" class="form-control" />
                                <span asp-validation-for="Mail" class="text-danger"></span> 
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                        @ViewBag.Error
                       
                                </div>
                            }
                                <div class="form-group">
                                    <input asp-action="Login" asp-controller="Admin" type="submit" value="Login" class="btn btn-primary" />
                                </div>
                                <hr />
                                <!-- Register button -->
                                <div class="form-group">
                                    <input asp-action="Index" asp-controller="Registro" type="submit" value="Registrarse" class="btn btn-primary" />
                                </div>
                        </form>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->